@model IEnumerable<NgHoangHa_0783.Models.Category>

<h2>Category</h2>
<div class="d-flex justify-content-end mb-3">
    <a asp-action="Add" class="btn btn-primary me-2">Add Category</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cate in Model)
        {
            <tr>
                <td>@cate.Id</td>
                <td>@cate.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@cate.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                    <a asp-action="Delete" asp-route-id="@cate.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
