@model NgHoangHa_0783.Models.Product

<h2 class="mb-4" style="font-size: 2.5rem;">    DETAILS</h2>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded" style="border: 2px solid #000; max-height: 400px; object-fit: contain;" />
        }
    </div>
    <div class="col-md-6">
        <h2 class="mb-3">SP: @Model.Name</h2>
        <p><strong>Price:       </strong>  @Model.Price.ToString("C")</p>
        <p><strong>Decription:  </strong>  @Model.Description</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-4">Back to List</a>
