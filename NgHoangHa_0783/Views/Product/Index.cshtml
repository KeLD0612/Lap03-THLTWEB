@model IEnumerable<NgHoangHa_0783.Models.Product>
<h2>Products</h2>
<div class="d-flex justify-content-end mb-3">
    <a asp-action="Add" class="btn btn-primary me-2">Add Product</a>

    <a asp-action="AddCategory" class="btn btn-secondary">Add Category</a>

</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>      
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100px; max-height: 60px;" />
                    }
                </td>
                <td>@product.Category?.Name</td>
                <td>
                    <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-sm btn-warning me-2">View</a> |
                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-danger me-2">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-info me-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
